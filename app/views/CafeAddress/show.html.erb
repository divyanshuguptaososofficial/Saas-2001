<h1 class="cafe-address-title">Update Cafe Address here !! </h1>

<%= form_with(url:"/CafeAddressUpdate" , method: "post", class: "cafe-address-show") do %>
  <%= text_field_tag(:address_line1, nil,value: @address_line1, class: "form-input", placeholder: "Ex: Door No. 1-3-130/2") %>
  <%= text_field_tag(:address_line2, nil,value: @address_line2, class: "form-input", placeholder: "Ex: Adam Avenue") %>
  <%= text_field_tag(:address_line3, nil,value: @address_line3, class: "form-input", placeholder: "Ex: Banjara Hills") %>
  <%= text_field_tag(:address_line4, nil,value: @address_line4, class: "form-input", placeholder: "Ex: Hyderabad") %>
  <%= submit_tag("Update!", class: "form-submit", data: {disable_with: "Updating.."}) %>
<% end %>
